<div class="modal fade" id="prizeModal">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button class="close" data-dismiss="modal">&times;</button>
				<h4 class="modal-title"><i class="fa fa-thumbs-o-up nav-icon"></i> ほめる</h4>
			</div>
			<div class="table-responsive" style="text-align:left;">
			<form action="/actions" method="post" id="prize_form" class="form-group has-feedback">
				<% if @isMobile == true %>
					<table class="modal-body table" style="width:100%; margin-left: auto; margin-right: auto; margin-top: 14px;">
				<% else %>
					<table class="modal-body table" style="width:80%; margin-left: auto; margin-right: auto; margin-top: 14px;">
				<% end %>
					<input type="hidden" name="author" id="action_author" value="<%= current_user.id %>">
					<tbody>
						<tr>
							<td><span class="badge">WHO</span></td>
							<td>
								<% if self.controller_name == "actions" && self.action_name == "show"%>
									<div class="who_select">
										<div class="one_select" style="position: relative;">
											<select class="form-control input-sm prize_form" id="action_who" name="who[]">
												<option value="<%= @user.id %>"><%= @user.name %></option>
											</select>
										</div>
									</div>
								<% else %>
									<div class="who_select" data-user_count="<%= (@user_list.count-1) %>">
										<div class="one_select" style="position: relative;">
											<select class="form-control input-sm prize_form" id="action_who" name="who[]">
												<% @user_list.each do |user| %>
													<% if user.id != current_user.id %>
														<option value="<%= user.id %>" data-user_id="<%= user.id %>"><%= user.name %></option>
													<% end %>
												<% end %>
											</select>
										</div>
									</div>
								<% end %>
							</td>

							<td>さんが <i class="fa fa-plus-circle plus_actor" style="font-size: 20px; padding-left: 8px;"></i></td>
						</tr>
						<tr>
							<td><span class="badge">WHEN</span></td>
							<td>
								<input type="text" class="form-control input-sm prize_form" id="action_date" name="date" readonly="readonly"><br>
								<input id="action_time" type="text" class="form-control input-sm prize_form" name="time" readonly="readonly">
							</td>
							<td>頃に</td>
						</tr>
						<tr>
							<td><span class="badge">WHERE</span></td>
							<td>
								<input type="text" name="where" class="form-control input-sm prize_form" id="action_where" name="where" style="display:inline;">
							</td>
							<td>で</td>
						</tr>
						<tr>
							<td><span class="badge">WHAT</span></td>
							<td>
								<input type="text" name="what" class="form-control input-sm prize_form" id="action_what" name="what" style="display:inline;">
							</td>
							<td>ました！</td>
						</tr>
					</tbody>
				</table>
			</form>
			</div>
			<div class="modal-footer">
				<div class="btn btn-primary" id="prize_submit">すごい！</div>
			</div>
		</div>
	</div>
</div>